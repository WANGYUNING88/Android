<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.intent">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity1"
            android:label="activity1">
            <intent-filter>
                <data android:scheme="huabei"
                    android:host="paowang"
                    android:port="8888"
                    android:path="/wangyuning"/>

                <action android:name="wish"/>
                <action android:name="cool"/>
                <category android:name="shuai"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".Activity2"
            android:label="activity2"
            android:icon="@drawable/xiongmao">
            <intent-filter>
                <action android:name="1"/>
                <action android:name="cool"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>